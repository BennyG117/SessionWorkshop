<div>
    @* NVABAR *@
    <div class="d-flex flex-column justify-content-between">
        <div class="d-flex justify-content-between w-80">
            <h2>Welcome @Context.Session.GetString("UserName")!</h2>
                <a asp-action="Logout">
                <button class="btn mt-3 border text-light">Logout</button>
                </a>
        </div>
        <div>
            <hr class="text-light border w-80" >
        </div>
    </div>

    @* Dashboard Body *@
    <div class="container d-flex align-items-center flex-column">
        <div class="mt-3">
            <h1>@Context.Session.GetInt32("CurrentNum")</h1>
        </div>
        <div class="d-flex mb-1">
            <form asp-action="PlusOne">
                <input class="buttonSquares p-2 m-1 shadow-sm border-4 btn-warning" type="submit" value="+1">
            </form>
            <form asp-action="MinusOne">
                <input class="buttonSquares p-2 m-1 shadow-sm border-4 btn-primary" type="submit" value="-1">
            </form>
        
        </div>
        <div class="d-flex mb-5">
            <form asp-action="TimesTwo">
                <input class="buttonSquares p-2 m-1 shadow-sm border-4 btn-danger" type="submit" value="x2">
            </form>
            <form asp-action="RandomAdd">
                <input class="buttonSquares p-2 m-1 shadow-sm border-4 btn-success" type="submit" value="+ Random">
            </form>
        </div>
    </div>
</div>